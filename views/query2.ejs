                    <li class="nav-item">
                        <a href="/logout" class="nav-link">Logout</a>
                    </li>
                </ul>
            </div>
        </div>
    </nav>
<!-- ----------------------------PAGE CONTENT-------------------------------  -->
    
    <form method="post" action="/updateProfile/<%= url.substr(1) %> " class="queryPage" onsubmit="function stop(e){
        e.preventDefault()
        someBug()
        return false
        }">

        <div class="proCodeAndDesc">
            <h1>Procedure Code: <span class="procCode"></span></h1>
            <p>Description: <span class="procDescription"></span></p>

            <div class="buttons">
                <button class="btn-primary" type="submit">Update</button>
                 <!-- <button class="printBtn" type="button" onclick="window.print()">Print This Page</button> -->
            </div>
        </div>
        
        <div class="allQuestions">
            <div class="insuranceQuestions">
                <h2>Insurance Questions</h2>
                <ul class="questionListIns">
                    <% for(let i = 0; i<queryForm[0].savedDocs.length; i++){%>
                        <% for (const property in queryForm[0].savedDocs[i].doc[0]) {%>
                            <% if(property !== "procedureCode" && property !== "procedureDescription"){%>
                                <% if(property.substr(0, 3) === "ins"){%>
                                    <%if(url.substr(14).replace("%20", " ") === queryForm[0].savedDocs[i].date){%>
                    <li class="insQ">
                        <span></span>
                        <textarea class="insQInput" name="<%= property %>"><%= queryForm[0].savedDocs[i].doc[0][property] %></textarea>
                    </li>
                                    <% } %>
                                <% } %>
                            <% } %>
                        <% } %>
                    <% } %>
                </ul>
            </div>

            <div class="providerQuestions">
                <h2>Provider Questions</h2>
                <ul class="questionListProvider">
                    <% for(let i = 0; i<queryForm[0].savedDocs.length; i++){%>
                        <% for (const property in queryForm[0].savedDocs[i].doc[0]) {%>
                            <% if(property !== "procedureCode" && property !== "procedureDescription"){%>
                                <% if(property.substr(0, 3) === "pro"){%>
                                    <%if(url.substr(14).replace("%20", " ") === queryForm[0].savedDocs[i].date){%>
                    <li class="proQ">
                        <span></span>
                        <textarea class="proQInput" name="<%= property %>"><%= queryForm[0].savedDocs[i].doc[0][property] %></textarea>
                    </li>
                                    <% } %>
                                <% } %>
                            <% } %>
                        <% } %>
                    <% } %>
                </ul>
            </div>
        </div>
    </form>
    <section class="footer" id="gradient-custom">
    </section>

<script src="https://kit.fontawesome.com/c0e668a8ad.js" crossorigin="anonymous"></script>
<script src="/query2.js"></script>

</body>
</html>


