<!-- ----------------------------PAGE CONTENT-------------------------------  -->
    <button class="printBtn" onclick="window.print()">Print This Page</button>

    <form method="post" action="/saveToProfile" class="queryPage">
        <button class="btn-primary" type="submit">Save to profile</button>

        <div class="proCodeAndDesc">
            <h1 class="procCode">*The searched code displays here*</h1>  
            <p class="procDescription"></p>           
        </div>
        
        <div class="allQuestions">
            <div class="insuranceQuestions">
                <h2>Insurance Questions</h2>
                <ul class="questionListIns">
                </ul>
            </div>

            <div class="providerQuestions">
                <h2>Provider Questions</h2>
                <ul class="questionListProvider">
                </ul>
            </div>
        </div>
    </form>
    <section class="footer" id="gradient-custom">
    </section>

