    <link rel="stylesheet" href="/query.css">
</head>
<body>
<!-- --------------------NAV BAR---------------------------------- -->
    <nav id="gradient-custom" class="navbar navbar-expand-md bg-light navbar-dark">
        <div class="container"> 

            <a href="/" class="navbar-brand"><img id="navLogo" src="/img/default-monochromeNoMoto.svg" alt="DentaQuery Logo"></a> 
         
            <button 
                class="navbar-toggler" 
                type="button" 
                data-bs-toggle="collapse" 
                data-bs-target="#navmenu">
                <span class="navbar-toggler-icon"></span>
            </button>

            <div class="collapse navbar-collapse" id="navmenu">
                <ul class="navbar-nav ms-auto">
                    <li class="nav-item">
                        <a href="/search" class="nav-link">Search</a>
                    </li>
                    <!-- <li class="nav-item">
                        <a href="/query" class="nav-link">Query</a>
                    </li> -->
